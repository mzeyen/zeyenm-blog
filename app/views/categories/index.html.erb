<h1 align="center">Alle Kategorien</h1>
<div align="center">
<%= will_paginate %>
<% @categories.each do |category| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="article-title">
                    <%= link_to "#{category.name}", category_path(category) %>
                </li>
                <li><small><%= category.articles.count  %> Artikel</small></li>
            </div>
        </div>
    </ul>
    <%end%>
    <%= will_paginate %>
</div>