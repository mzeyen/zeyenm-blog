<h1 align="center">Alle Kategorien</h1>
<div align="center">
<%= will_paginate %>
<% @categories.each do |category| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="article-title">
                    <%= link_to "#{category.name}", category_path(category) %>
                </li>
                <li><small><%= category.articles.count  %> Artikel</small></li>
                <% if logged_in? and current_user.admin? %>
        <div class="article-actions">
          <%= link_to 'Kategorie bearbeiten', edit_category_path(category), class: "btn btn-xs btn-primary" %>
          <%= link_to 'Kategorie löschen', categories_path(category), method: :delete, 
                                      data: { confirm: "Möchten Sie den Artikel wirklich löschen?"}, class: "btn btn-xs btn-danger" %>
        </div>
        <% end %>
            </div>
        </div>
    </ul>
    <%end%>
    <%= will_paginate %>
</div>