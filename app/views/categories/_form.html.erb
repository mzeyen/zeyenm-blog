<%= render 'shared/errors', obj: @category %>
<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |c| %>
<div class="form-group">
    <div class="control-label col-sm-2">
    <%= c.label :name  %><br/>
    </div>
    <div class="col-sm-8">
    <%= c.text_field :name , class: "form-control", placeholder: "Kategorienamen eingeben", autofocus: true  %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= c.submit(@category.new_record? ? "Kategorie speichern" : "Änderung speichern", class: 'btn btn-primary btn-lg') %>
    </div>
</div>
<% end %>
<div class="col-xs col-xs-offset-4">
    [ <%= link_to 'Zurück zur Kategorieübersicht', categories_path %> ]
</div>
