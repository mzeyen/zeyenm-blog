<%= render 'shared/errors', obj: @user %>
<div class="row">
  <div class="col-md-12">
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |u| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :username  %><br/>
        </div>
        <div class="col-sm-8">
          <%= u.text_field :username , class: "form-control", placeholder: "Benutzernamen eingeben", autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :email %><br/>
        </div>
        <div class="col-sm-8">
          <%= u.email_field :email , class: "form-control", placeholder: "Email eingeben" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :password %><br/>
        </div>
        <div class="col-sm-8">
          <%= u.password_field :password , class: "form-control", placeholder: "Passwort eingeben" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= u.submit(@user.new_record? ? "Signup" : "Änderung speichern", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
  <% end %>
  <div class="col-xs col-xs-offset-4">
      [ <%= link_to 'Zurück zur Artikelübersicht', articles_path %> ]
  </div>
  </div>
</div>