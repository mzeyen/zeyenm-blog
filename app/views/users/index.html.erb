<h1 align="center">Alle User</h1>
<div align="center">
  <%= will_paginate %>
    <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4  col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
              <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= user.articles.count if user.articles %> Artikel </small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "User löschen", user_path(user), method: :delete, 
                  data: { confirm: "Diesen User und all seine Artikel löschen?"}, 
                  class: "btn btn-xs btn-danger" %></li>
          <% end %>
        </div>
      </div>
    </ul>
    <% end %>
    <%= will_paginate %>
</div>