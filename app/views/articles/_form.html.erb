<%= render 'shared/errors', obj: @article %>
<div class="row">
  <div class="col-md-12">
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :title %><br/>
        </div>
        <div class="col-sm-8">
          <%= a.text_field :title, class: "form-control", placeholder: "Titel des Artikel", autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :description %><br/>
        </div>
        <div class="col-sm-8">
          <%= a.text_area :description , rows: 10, class: "form-control", placeholder: "Text des Artikels" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-9">
          <%= a.submit "Artikel speichern", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
  <% end %>
  <div class="col-xs col-xs-offset-4">
      [ <%= link_to 'Zurück zur Artikelübersicht', articles_path %> ]
  </div>
  </div>
</div>