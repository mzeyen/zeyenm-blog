<h1>Ausgewählten Artikel bearbeiten</h1>
<% if @article.errors.any? %>
    <h2>Die folgenden Fehler sind aufgetreten.</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for @article do |a| %>
    <p>
      <%= a.label :title %><br/>
      <%= a.text_field :title %>
    </p>
    <p>
      <%= a.label :description %><br/>
      <%= a.text_area :description %>
    </p>
    <p>
      <%= a.submit %>
    </p>
<% end %>
<%= link_to 'Zurück zur Artikelübersicht', articles_path %>