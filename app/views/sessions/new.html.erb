<h1 align="center">Login</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |u| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :email  %><br/>
        </div>
        <div class="col-sm-8">
          <%= u.email_field :email , class: "form-control", placeholder: "Email eingeben", autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :password %><br/>
        </div>
        <div class="col-sm-8">
          <%= u.password_field :password , class: "form-control", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= u.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
  <% end %>
  <div class="col-xs col-xs-offset-4">
      [ <%= link_to 'Zurück zur Artikelübersicht', articles_path %> ]
  </div>